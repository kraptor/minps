{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build - Debug",
            "type": "shell",
            "command": "nimble build_debug",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "Build - Release",
            "type": "shell",
            "command": "nimble build_release",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "Build - Release (with stacktraces)",
            "type": "shell",
            "command": "nimble build_release_stacktrace",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "Build - Profiler",
            "type": "shell",
            "command": "nimble build_profiler",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "Build - Profiler (memory)",
            "type": "shell",
            "command": "nimble build_profiler_memory",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "Build - Callgrind",
            "type": "shell",
            "command": "nimble build_callgrind",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "Tests - Run",
            "type": "shell",
            "command": "nimble test --silent",
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "Wipe",
            "type": "shell",
            "command": "nimble wipe",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "Documentation",
            "type": "shell",
            "command": "nimble build_docs",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": []
        }
    ]
}