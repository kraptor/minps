{
    "version": "0.2.0",
    "configurations": [
        {
            "preLaunchTask": "Build - Debug",
            "name": "Debug - Linux (gdb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/minps_debug",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "text": "source ~/.choosenim/toolchains/nim-#devel/tools/debug/nim-gdb.py",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "preLaunchTask": "Build - Debug",
            "type": "lldb",
            "request": "launch",
            "name": "Debug - LLDB",
            "preRunCommands": [
                "command script import --allow-reload ~/.choosenim/toolchains/nim-#devel/tools/debug/nimlldb.py"
            ],
            "program": "${workspaceFolder}/bin/minps_debug",
            "args": [],
            "cwd": "${workspaceFolder}",
        }
    ]
}